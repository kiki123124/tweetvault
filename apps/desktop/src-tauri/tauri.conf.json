{
  "$schema": "https://raw.githubusercontent.com/nicokosi/tauri/v2/crates/tauri-cli/schema.json",
  "productName": "TweetVault",
  "version": "0.1.0",
  "identifier": "com.tweetvault.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "TweetVault",
        "width": 480,
        "height": 720,
        "resizable": true,
        "decorations": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "minWidth": 400,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
